    "version": "0.0.1",
    "configurations": [
        {
            "command": "npm run bug-start",
            "name": "Start: Bug Core",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src",
            "envFile": "${workspaceRoot}/.env",
        },
        {
            "command": "npm run bug-dev",
            "name": "Dev: Bug Core",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src",
            "envFile": "${workspaceRoot}/.env",
        },
    ]
}