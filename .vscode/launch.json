{
    //NAME: launch.js
    //AUTH: Ryan McCartney <ryan.mccartney@bbc.co.uk>
    //DATE: 21/02/2021
    //DESC: VSCode Configurations for Development and Testing

    "version": "0.0.1",
    "configurations": [
        {
            "command": "npm run development",
            "name": "bug-core: dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "command": "npm run production",
            "name": "bug-core: prod",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "command": "npm install -also=dev",
            "name": "bug-core: install",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "command": "npm run build",
            "name": "client: build",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src/client",
            "envFile": "${workspaceRoot}/.env"
        },
        {
            "command": "npm install -also=dev",
            "name": "client: install",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/src/client",
            "envFile": "${workspaceRoot}/.env"
        }
    ]
}
