/var/log/bbc {
    su www-data www-data
    weekly
    missingok
    rotate 4
    compress
    delaycompress
}

/var/log/bbc/*DEBUG* {
    su www-data www-data
    daily
    missingok
    rotate 1
    maxage 2
    compress
    delaycompress
}

/var/log/bbc/*INFO* {
    su www-data www-data
    daily
    missingok
    rotate 7
    maxage 14
    compress
    delaycompress
}

/var/log/bbc/*ERROR* /var/log/bbc/*WARNING* {
    su www-data www-data
    weekly
    missingok
    rotate 1
    maxage 2
    compress
    delaycompress
}