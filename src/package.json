{
    "name": "bug-core",
    "version": "3.0.0-b",
    "description": "Broadcast Universal Gateway",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "production": "node bin/bug-core-prod",
        "development": "concurrently \"nodemon ./bin/bug-core-dev.js\" \"cd client && npm run start\"",
        "test": "jest --forceExit --detectOpenHandles --maxWorkers=1"
    },
    "nodemonConfig": {
        "ignore": [
            "./data/*",
            "./config/*",
            "./modules/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bbc/bbcnews-bug-core.git"
    },
    "author": "Geoff House",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bbc/bbcnews-bug-core/issues"
    },
    "homepage": "https://github.com/bbc/bbcnews-bug-core#readme",
    "dependencies": {
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "change-case": "^4.1.2",
        "concurrently": "^6.0.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "delay": "^5.0.0",
        "dockerode": "^3.2.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "express-session": "^1.17.2",
        "fstream": "^1.0.12",
        "helmet": "^4.4.1",
        "http-errors": "^1.8.0",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "module-alias": "^2.2.2",
        "moment": "^2.29.1",
        "mongodb": "^3.6.5",
        "morgan": "^1.10.0",
        "nanoid": "^3.1.22",
        "node-cache": "^5.1.2",
        "openapi-types": "^8.0.0",
        "passport": "^0.4.1",
        "passport-http-header-strategy": "^1.1.0",
        "passport-local": "^1.0.0",
        "passport-oauth2": "^1.5.0",
        "passport-saml": "^3.1.0",
        "path": "^0.12.7",
        "serve-favicon": "^2.5.0",
        "socket.io": "^4.0.1",
        "swagger-jsdoc": "^6.0.2",
        "swagger-ui-express": "^4.1.6",
        "systeminformation": "^5.7.7",
        "tar": "^6.1.0",
        "uuid": "^8.3.2",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0",
        "winston-mongodb": "^5.0.7"
    },
    "devDependencies": {
        "jest": "^26.6.0",
        "jest-extended": "^0.11.5",
        "nodemon": "^2.0.7",
        "supertest": "^6.1.3"
    },
    "_moduleAliases": {
        "@root": ".",
        "@bin": "./bin/",
        "@core": "./core/",
        "@filters": "./filters/",
        "@routes": "./routes/",
        "@models": "./models/",
        "@utils": "./utils/",
        "@services": "./services/",
        "@sockets": "./sockets/",
        "@workers": "./workers/",
        "@middleware": "./middleware/"
    },
    "jest": {
        "rootDir": ".",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "./node_modules/",
            "./modules/",
            "./client/"
        ],
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "moduleNameMapper": {
            "@root/(.*)": "<rootDir>/$1",
            "@bin/(.*)": "<rootDir>/bin/$1",
            "@core/(.*)": "<rootDir>/core/$1",
            "@filters/(.*)": "<rootDir>/filters/$1",
            "@routes/(.*)": "<rootDir>/routes/$1",
            "@models/(.*)": "<rootDir>/models/$1",
            "@utils/(.*)": "<rootDir>/utils/$1",
            "@workers/(.*)": "<rootDir>/workers/$1",
            "@sockets/(.*)": "<rootDir>/sockets/$1",
            "@services/(.*)": "<rootDir>/services/$1",
            "@middleware/(.*)": "<rootDir>/middleware/$1"
        }
    }
}
