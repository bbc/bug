{
  "name": "bug-core",
  "version": "3.0.0",
  "description": "Broadcast Universal Gateway",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "production": "node bin/bug-core-prod",
    "development": "concurrently \"nodemon ./bin/bug-core-dev.js\" \"cd client && npm run start\"",
    "test": "jest --passWithNoTests"
  },
  "nodemonConfig": {
    "ignore": [
      "./data/*",
      "./config/*",
      "./modules/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/bbcnews-bug-core.git"
  },
  "author": "Geoff House",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbc/bbcnews-bug-core/issues"
  },
  "homepage": "https://github.com/bbc/bbcnews-bug-core#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "concurrently": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "delay": "^5.0.0",
    "dockerode": "^3.2.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fstream": "^1.0.12",
    "helmet": "^4.4.1",
    "http-errors": "^1.8.0",
    "jest": "^26.6.3",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongodb": "^3.6.5",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.22",
    "path": "^0.12.7",
    "serve-favicon": "^2.5.0",
    "tar": "^6.1.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "./node_modules/",
      "./modules/",
      "./client/"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@filters": "./filters/",
    "@routes": "./routes/",
    "@models": "./models/",
    "@utils": "./utils/",
    "@services": "./services/",
    "@middleware": "./middleware/"
  }
}
