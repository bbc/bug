{
    "name": "bug",
    "version": "3.0.6",
    "description": "Broadcast Universal Gateway",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "production": "node bin/bug-prod",
        "development": "concurrently \"nodemon ./bin/bug-dev.js\" \"cd client && npm run start\"",
        "test": "jest --forceExit --detectOpenHandles --maxWorkers=1",
        "modulebuilder": "node modulebuilder/cli.mjs",
        "documentation": "node utils/docs-templater.js"
    },
    "nodemonConfig": {
        "ignore": [
            "./data/*",
            "./config/*",
            "./modules/*",
            "./client/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bbc/bug.git"
    },
    "author": "Geoff House",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/bbc/bug/issues"
    },
    "dependencies": {
        "@apidevtools/swagger-parser": "^10.1.0",
        "axios": "^0.24.0",
        "bcryptjs": "^2.4.3",
        "change-case": "^4.1.2",
        "cidr-regex": "^3.1.1",
        "concurrently": "^7.2.1",
        "connect-mongodb-session": "^3.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "delay": "^5.0.0",
        "dockerode": "^3.3.1",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "express-async-handler": "^1.2.0",
        "express-fileupload": "^1.4.0",
        "express-session": "^1.17.3",
        "fs-extra": "^10.1.0",
        "glob": "^8.0.3",
        "helmet": "^5.1.0",
        "inquirer": "^9.0.0",
        "ip-range-check": "^0.2.0",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "module-alias": "^2.2.2",
        "moment": "^2.29.3",
        "mongodb": "^4.6.0",
        "morgan": "^1.10.0",
        "nanoid": "^3.3.4",
        "node-cache": "^5.1.2",
        "openapi-types": "^10.0.0",
        "passport": "^0.5.3",
        "passport-http-header-strategy": "^1.1.0",
        "passport-local": "^1.0.0",
        "passport-openid": "^0.4.0",
        "passport-saml": "^3.2.0",
        "path": "^0.12.7",
        "serve-favicon": "^2.5.0",
        "socket.io": "^4.5.1",
        "socket.io-client": "^4.5.3",
        "swagger-jsdoc": "^6.2.1",
        "swagger-ui-express": "^4.4.0",
        "systeminformation": "^5.16.1",
        "tar": "^6.1.11",
        "uuid": "^8.3.2",
        "wildcard-match": "^5.1.2",
        "winston": "^3.7.2",
        "winston-daily-rotate-file": "^4.7.1",
        "winston-mongodb": "^5.0.7"
    },
    "devDependencies": {
        "jest": "^27.5.1",
        "jest-extended": "^2.0.0",
        "nodemon": "^2.0.16",
        "supertest": "^6.2.3"
    },
    "_moduleAliases": {
        "@root": ".",
        "@bin": "./bin/",
        "@core": "./core/",
        "@filters": "./filters/",
        "@routes": "./routes/",
        "@models": "./models/",
        "@utils": "./utils/",
        "@services": "./services/",
        "@sockets": "./sockets/",
        "@workers": "./workers/",
        "@middleware": "./middleware/"
    },
    "jest": {
        "rootDir": ".",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "./node_modules/",
            "./modules/",
            "./client/",
            "./routes/icons.test.js"
        ],
        "setupFilesAfterEnv": [
            "jest-extended/all"
        ],
        "moduleNameMapper": {
            "@root/(.*)": "<rootDir>/$1",
            "@bin/(.*)": "<rootDir>/bin/$1",
            "@core/(.*)": "<rootDir>/core/$1",
            "@filters/(.*)": "<rootDir>/filters/$1",
            "@routes/(.*)": "<rootDir>/routes/$1",
            "@models/(.*)": "<rootDir>/models/$1",
            "@utils/(.*)": "<rootDir>/utils/$1",
            "@workers/(.*)": "<rootDir>/workers/$1",
            "@sockets/(.*)": "<rootDir>/sockets/$1",
            "@services/(.*)": "<rootDir>/services/$1",
            "@middleware/(.*)": "<rootDir>/middleware/$1"
        }
    }
}
